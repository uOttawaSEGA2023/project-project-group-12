<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_marginVertical="45sp"
    android:layout_marginHorizontal="15sp"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.patientFragments.BookingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="25sp"
        android:text="Book an appointment"
        android:gravity="center">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:textSize="15sp"
        android:layout_marginVertical="15sp"
        android:text="To book an appointment, please enumerate your desired speciality, such as family medicine, internal medicine, etc."
        android:gravity="center">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:layout_gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/specialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Specialty" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_gravity="center"
        android:id="@+id/specialtySearchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:text="@string/search"
        android:layout_margin="15sp">
    </com.google.android.material.button.MaterialButton>
</LinearLayout>